{
  "info": {
    "name": "Campus Food Ordering - Auth Module",
    "description": "Complete authentication API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Signup",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"john_doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"SecurePassword123!\",\n  \"role\": \"USER\",\n  \"authType\": \"PASSWORD\",\n  \"collegeName\": \"XYZ College\",\n  \"department\": \"Computer Science\",\n  \"yearOfStudy\": \"2\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/signup",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "auth",
            "signup"
          ]
        },
        "description": "Create new user account and send email verification code"
      },
      "response": []
    },
    {
      "name": "2. Resend Verification Code",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"john@example.com\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/resend-verification-code",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "auth",
            "resend-verification-code"
          ]
        },
        "description": "Resend verification code to email (if user didn't receive first code)"
      },
      "response": []
    },
    {
      "name": "3. Verify Email",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"john@example.com\",\n  \"code\": \"123456\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/verify-email",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "auth",
            "verify-email"
          ]
        },
        "description": "Verify user's email using verification code sent to their email"
      },
      "response": []
    },
    {
      "name": "4. Signin",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Save access token for later use\n",
              "if (pm.response.code === 200) {\n",
              "    var jsonData = pm.response.json();\n",
              "    pm.environment.set(\"accessToken\", jsonData.data.accessToken);\n",
              "    console.log(\"Access Token saved: \" + jsonData.data.accessToken.substring(0, 20) + \"...\");\n",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"SecurePassword123!\",\n  \"role\": \"USER\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/signin",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "auth",
            "signin"
          ]
        },
        "description": "Authenticate user and generate access token (+ refresh token in cookie)"
      },
      "response": []
    },
    {
      "name": "5. Refresh Token",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Save new access token after rotation\n",
              "if (pm.response.code === 200) {\n",
              "    var jsonData = pm.response.json();\n",
              "    pm.environment.set(\"accessToken\", jsonData.data.accessToken);\n",
              "    console.log(\"New Access Token saved after rotation\");\n",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/auth/refresh",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "auth",
            "refresh"
          ]
        },
        "description": "Get new access token using refresh token (with token rotation). Refresh token must be sent from cookie."
      },
      "response": []
    },
    {
      "name": "6. Logout",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/auth/logout",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "auth",
            "logout"
          ]
        },
        "description": "Logout user from current device (revoke refresh token)"
      },
      "response": []
    },
    {
      "name": "7. Forgot Password",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"john@example.com\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/forgot-password",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "auth",
            "forgot-password"
          ]
        },
        "description": "Initiate password reset flow (send reset code to email)"
      },
      "response": []
    },
    {
      "name": "8. Reset Password",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"john@example.com\",\n  \"resetCode\": \"123456\",\n  \"newPassword\": \"NewSecurePassword456!\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/reset-password",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "auth",
            "reset-password"
          ]
        },
        "description": "Reset password using reset code (all refresh tokens are revoked after this)"
      },
      "response": []
    },
    {
      "name": "9. Get All Users (Admin)",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "// Verify access token is set\n",
              "if (!pm.environment.get(\"accessToken\")) {\n",
              "    console.error(\"Access token not set! Please signin first.\");\n",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/auth/users",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "auth",
            "users"
          ]
        },
        "description": "List all users in system (ADMIN ONLY)"
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    }
  ]
}
